<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="@android:style/Theme.Black.NoTitleBar"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowBackground">@color/theme</item>
    </style>

    <style name="dot_style">
        <item name="android:layout_width">5dip</item>
        <item name="android:layout_height">5dip</item>
        <item name="android:background">@drawable/dot_normal</item>
        <item name="android:layout_marginLeft">1.5dip</item>
        <item name="android:layout_marginRight">1.5dip</item>
    </style>

    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/transparent_background</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊 -->

    </style>

    <style name="loading_small" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@anim/loading</item>
        <item name="android:layout_width">21dip</item>
        <item name="android:layout_height">21dip</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="loading_voice_left" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@anim/voice_left_loading</item>
        <item name="android:layout_width">19dip</item>
        <item name="android:layout_height">19dip</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="loading_voice_right" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@anim/voice_right_loading</item>
        <item name="android:layout_width">19dip</item>
        <item name="android:layout_height">19dip</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="widget_listview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">1.0dip</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollingCache">false</item>
    </style>

    <style name="text_mid_black_gray">
        <item name="android:textColor">#ff383838</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="text_mid_black_gray_15">
        <item name="android:textColor">#ff383838</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="text_mid_white_15">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="text_small_white_14">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_small_white_11">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="text_small_black_11">
        <item name="android:textColor">#ff383838</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="text_small_black_13">
        <item name="android:textColor">#ff383838</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="text_mid_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_myresume_black">
        <item name="android:textColor">#383838</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TabButton">
        <item name="android:textSize">10.0sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/main_label_bg_selector</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:paddingBottom">5.0dip</item>
        <item name="android:drawablePadding">1.0dp</item>
        <item name="android:paddingTop">10.0dip</item>
    </style>

    <style name="type_fgroup_stitle">
        <item name="android:textSize">17.0sp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#383838</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="type_fgroup_layout_item">
        <item name="android:background">@drawable/fgroup_bg_item</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>