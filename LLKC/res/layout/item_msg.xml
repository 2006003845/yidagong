<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/msg_item_bg_selector" >

        <com.zzl.zl_app.widget.CircularImage
            android:id="@+id/item_friend_imgv_head"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:scaleType="centerInside"
            android:src="@drawable/head_default" />

        <TextView
            android:id="@+id/item_friend_tv_not"
            style="@style/text_small_white_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/item_friend_imgv_head"
            android:layout_alignTop="@id/item_friend_imgv_head"
            android:layout_marginRight="-7dp"
            android:layout_marginTop="-6dp"
            android:background="@drawable/bg_not"
            android:gravity="center"
            android:text="5"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/item_friend_imgv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:scaleType="centerInside"
            android:src="@drawable/arrow"
            android:visibility="gone" />

        <Button
            android:id="@+id/item_msg_delete_btn"
            style="@style/text_small_white_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:focusable="false"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:background="@drawable/bg_btn_red_selector"
            android:text="@string/delete"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/item_msg_delete_btn"
            android:layout_toRightOf="@id/item_friend_imgv_head"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/item_friend_tv_name"
                    style="@style/text_mid_black_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/item_friend_tv_time"
                    style="@style/text_small_black_11"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right|center_vertical"
                    android:text=""
                    android:textColor="#c4c4c4" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_friend_tv_content"
                style="@style/text_small_black_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:text=""
                android:textColor="#a9a9a9"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>