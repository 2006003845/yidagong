<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_title"
    android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:background="@drawable/home_title_bg" >

    <ImageView
        android:id="@+id/home_title_image"
        android:layout_width="21dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/poii" />

    <RelativeLayout
        android:id="@+id/home_title_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/home_title_image"
        android:background="@drawable/bg_trans_selector" >

        <TextView
            android:id="@+id/home_title_tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="北京"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/home_title_tv_position2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/home_title_tv_position"
            android:layout_centerVertical="true"
            android:text="[切换]"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/title_card"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/home_title_seach"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_trans_selector"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:src="@drawable/home_title_search" />

</RelativeLayout>