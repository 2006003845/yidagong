<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <ImageView
            android:id="@+id/group_member_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerInside"
            android:src="@drawable/head_default" />

        <ImageView
            android:id="@+id/group_member_select"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignRight="@id/group_member_head"
            android:layout_alignTop="@id/group_member_head"
            android:src="@drawable/btn_checkbox_selector" />

        <TextView
            android:id="@+id/group_member_text"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_member_head"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:lines="1"
            android:text="sssssssssss"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>