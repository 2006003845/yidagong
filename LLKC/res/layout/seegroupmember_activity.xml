<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical" >

    <include
        android:id="@+id/top_tap"
        layout="@layout/other_title" />

    <GridView
        android:id="@+id/group_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_tap"
        android:numColumns="4" >
    </GridView>

    <LinearLayout
        android:id="@+id/bottom_tap"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_bottom"
        android:gravity="center"
        android:padding="5dp" >

        <Button
            android:id="@+id/btn_deletemembers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_red_selector"
            android:gravity="center"
            android:text="删除群成员"
            android:textColor="@color/gray"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>