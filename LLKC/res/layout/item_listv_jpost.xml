<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#efefef" >

        <LinearLayout
            android:id="@+id/item_listv_jpost_layout_oper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:gravity="center" >

            <Button
                android:id="@+id/item_listv_jpost_btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/bg_rounded_white_stroke"
                android:focusable="false"
                android:padding="5dp"
                android:text="@string/edit" />

            <Button
                android:id="@+id/item_listv_jpost_btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/bg_rounded_white_stroke"
                android:focusable="false"
                android:padding="5dp"
                android:text="@string/revoke" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@id/item_listv_jpost_layout_oper"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_listv_jpost_tv_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="西单商场导购"
                android:textColor="#121212"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/item_listv_jpost_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="2013-9-9 22:22"
                    android:textColor="#787878"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/item_listv_jpost_tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:gravity="center_vertical"
                    android:text="已发布"
                    android:textColor="#787878"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>