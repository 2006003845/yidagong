<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme"
    android:orientation="vertical" >

    <include layout="@layout/tap_top" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/indivi_bg" />

                <ImageView
                    android:id="@+id/personal_center_modifyinfo_but"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/all_button_edit" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp" >

                    <com.zzl.zl_app.widget.CircularImage
                        android:id="@+id/personal_center_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/personal_center_image"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/personal_center_name"
                                style="@style/text_mid_black_gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:layout_marginLeft="10dp"
                                android:shadowColor="@color/black"
                                android:shadowDx="1"
                                android:shadowDy="1.5"
                                android:shadowRadius="1.5"
                                android:text="@string/name"
                                android:textColor="@color/white"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/personal_center_corporate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/personal_center_tv_area"
                                style="@style/text_mid_black_gray_15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:shadowColor="@color/gray"
                                android:shadowDx="1"
                                android:shadowDy="1.5"
                                android:shadowRadius="1.5"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/personal_center_tv_age"
                                style="@style/text_mid_black_gray_15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:shadowColor="@color/gray"
                                android:shadowDx="1"
                                android:shadowDy="1.5"
                                android:shadowRadius="1.5"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/personal_center_tv_sex"
                                style="@style/text_mid_black_gray_15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:shadowColor="@color/gray"
                                android:shadowDx="1"
                                android:shadowDy="1.5"
                                android:shadowRadius="1.5"
                                android:text="@string/woman"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/personal_center_dynamic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_user_signature2_normal"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/personal_center_dynamic_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="个人动态"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/personal_center_dynamic_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/personal_center_dynamic_tv"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toLeftOf="@+id/personal_center_dynamic_image"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#828282"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/personal_center_dynamic_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/personal_center_dynamic_content"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textColor="#828282"
                        android:textSize="11sp" />

                    <ImageView
                        android:id="@+id/arrow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/arrow"
                        android:contentDescription="@null" />

                    <com.zzl.zl_app.widget.CircularImage
                        android:id="@+id/personal_center_dynamic_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/arrow1" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/home_recom_bg"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/modify_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/modify_password"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/arrow"
                            android:contentDescription="@null" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:contentDescription="@null"
                        android:scaleType="fitXY"
                        android:src="@color/gray" />

                    <RelativeLayout
                        android:id="@+id/personal_center_layout_my_collect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp" >

                        <TextView
                            android:id="@+id/personal_center_tv_collect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/my_collect"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/arrow"
                            android:contentDescription="@null" />
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    style="@style/text_mid_black_gray_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/personal_jobseeker"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/home_recom_bg"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/modify_resume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/personal_center_tv_resume"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:text="@string/myresume"
                                android:textColor="@color/black" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone" >

                                <ProgressBar
                                    android:id="@+id/personal_center_resume_progressBar"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:max="100"
                                    android:progress="50" />

                                <TextView
                                    android:id="@+id/personal_center_tv_resume_progressBar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@+id/personal_center_resume_progressBar"
                                    android:text="" />
                            </RelativeLayout>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/arrow"
                            android:contentDescription="@null" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:contentDescription="@null"
                        android:scaleType="fitXY"
                        android:src="@color/gray" />

                    <RelativeLayout
                        android:id="@+id/personal_center_layout_jpostrelations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/jpost_relations_record"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/arrow"
                            android:contentDescription="@null" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:contentDescription="@null"
                        android:scaleType="fitXY"
                        android:src="@color/gray" />

                    <RelativeLayout
                        android:id="@+id/personal_center_layout_browers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/browse_record"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/arrow"
                            android:contentDescription="@null" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_mid_black_gray_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/enterprise_recruitment"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/personal_center_isauth_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="#828282"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/home_recom_bg"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/personal_center_layout_alter_enterpriseinfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp" >

                        <TextView
                            android:id="@+id/personal_center_tv_alter_enterpriseinfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/alter_enterpriseinfo"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/arrow"
                            android:contentDescription="@null" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:contentDescription="@null"
                        android:scaleType="fitXY"
                        android:src="@color/gray" />

                    <RelativeLayout
                        android:id="@+id/personal_center_layout_manage_jpost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp" >

                        <TextView
                            android:id="@+id/personal_center_tv_enterprise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/manage_jpost"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/arrow"
                            android:contentDescription="@null" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/personal_center_layout_setting"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp" >

                    <ImageView
                        android:id="@+id/personal_center_imgv_set"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/main_label_icon_setting_selector"
                        android:contentDescription="@null" />

                    <TextView
                        android:id="@+id/personal_center_tv_set"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/personal_center_imgv_set"
                        android:text="@string/set"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/arrow"
                        android:contentDescription="@null" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>