<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/title_c" />

    <TextView
        style="@style/type_fgroup_stitle"
        android:background="@drawable/group_kuang_background"
        android:text="@string/contacts"
        android:textColor="#6e6e6e"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/transmit_layout_selectfriend"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:padding="3dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:text="@string/select_friend"
            android:textColor="#2f2f2f" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/arrow" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#e7e7e7" />

    <RelativeLayout
        android:id="@+id/transmit_layout_selectfgroup"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:padding="3dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:text="@string/select_fgroup"
            android:textColor="#2f2f2f" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/arrow" />
    </RelativeLayout>

    <TextView
        style="@style/type_fgroup_stitle"
        android:layout_marginTop="2dp"
        android:background="@drawable/group_kuang_background"
        android:gravity="center_vertical"
        android:text="@string/chat_recently"
        android:textColor="#6e6e6e"
        android:textSize="12sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:background="#aeaeae"
        android:visibility="gone" />

    <ListView
        android:id="@+id/transmit_listv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:cacheColorHint="#00000000"
        android:divider="#e7e7e7"
        android:dividerHeight="1dp"
        android:fadingEdge="none"
        android:scrollingCache="false" />

</LinearLayout>