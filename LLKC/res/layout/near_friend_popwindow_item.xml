<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/nearby_friend_dialog_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/pop_allperson_layout"
            android:layout_width="wrap_content"
            android:layout_height="45dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="查看所有人"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/pop_allperson_selector"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/edit_up" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:background="#aabbcc" />

        <RelativeLayout
            android:id="@+id/pop_man_layout"
            android:layout_width="wrap_content"
            android:layout_height="45dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="只看男生"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/pop_man_selector"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/edit_up" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:background="#aabbcc" />

        <RelativeLayout
            android:id="@+id/pop_woman_layout"
            android:layout_width="wrap_content"
            android:layout_height="45dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="只看女生"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/pop_woman_selector"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/edit_up" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>